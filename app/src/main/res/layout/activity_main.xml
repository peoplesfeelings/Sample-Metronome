<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="peoplesfeelingscode.com.samplemetronomerebuild.ActivityMain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtBpmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtBpmLabel" />

        <EditText
            android:id="@+id/txtBpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="6"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:layout_marginBottom="9dp"
            android:maxLength="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/txtRateLabel"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/rateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="9dp"/>

        <Button
            android:id="@+id/btnSamples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSamples"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnStart" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/myFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <com.WarwickWestonWright.HGDialV2.HGDialV2
            android:id="@+id/hgDialV2"
            app:HGDialV2Drawable="@drawable/dial2_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>


</LinearLayout>
